@using TheAncientMerch.Web.ViewModels.Sculptures
@model SculptureViewModel

@{
    ViewData["Title"] = Model.Name;
}



<div class="container">
    <div class="row">
        <div class="col-md-9 mb40">
            <article>
                <img  src="@Model.ImageUrl" width="300"  alt="" class="img-thumbnail rounded mx-auto d-block">
                <div class="post-content">
                    <hr/>
                    <h3 class="text-center">Description</h3>
                    <hr/>
                    <div>
                        @Model.Description
                    </div>
                   
                    <hr class="mb40">
                    <h4 class="mb40 text-uppercase text-center font500">Origin</h4>
                      @Model.Origin
                    <hr class="mb40">
                </div>
            </article>

        </div>
        <div class="col-md-3 mb40">
            <div class="mb40">
                <h4 class="sidebar-title">Product information</h4>
                <ul class="list-unstyled categories">
                    <hr/>
                    <li class="item-description">
                      <strong>Name: </strong>@ViewData["Title"]
                    </li>
                    <hr/>
                     <li class="item-description">
                        <strong>Height: </strong>@Model.Height
                    </li>
                    <hr/>
                    <li class="item-description">
                        <strong>Width: </strong>@Model.Width
                    </li>
                    <hr/>
                    <li class="item-description">
                        <strong>Weigth: </strong>@Model.Weigth kg
                    </li>
                    <hr/>
                    <li class="item-description">
                        <strong>Price: </strong>$@Model.Price USD
                     </li>
                    <hr/>
                    <li>
                        @*add verification if user is creator*@
                        <div class="mb-1">
                            <a asp-area="Administration" asp-controller="Workouts" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary text-white">
                             Edit
                            </a>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Delete
                            </button>
                            <a type="button" asp-area=""
                             asp-controller=""
                             asp-action=""
                             asp-route-id=""
                             class="btn btn-primary tests text-uppercase text-center">
                             Buy
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
           
        </div>
    </div>
</div>