@using TheAncientMerch.Web.ViewModels.Sculptures
@model SculptureViewModel




<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-9 col-xl-9 mt-3">
            <div class="row">
                <div class="col-md-6">
                    <p class="img" ">
                        <img src="@Model.ImageUrl" class="img-fluid" alt="Responsive image" />
                    </p>
                </div>
                <div class="col-md-6">
                     <h1 style="font-style" >@Model.Name</h1>
                    <p class="item-description">
                        <strong>Height: </strong>@Model.Height
                    </p>
                    <p class="item-description">
                        <strong>Width: </strong>@Model.Width
                    </p>
                    <p class="item-description">
                        <strong>Weigth: </strong>@Model.Weigth
                    </p>

                    <p class="item-description">
                        <strong>Price: </strong>$@Model.Price USD
                     </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p class="item-description">
                        <strong>Description: </strong>@Model.Description
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>